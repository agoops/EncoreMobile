<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.encore"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.front" />
	<uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".EncoreApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:debuggable="true" >
        <activity android:name="com.encore.MainActivity" >
        </activity>
        <activity android:name="com.encore.views.WelcomeActivity" 
            android:theme="@android:style/Theme.NoTitleBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.encore.AndroidVideoCapture" >
        </activity>
        <activity
            android:name=".CameraActivity" >
        </activity>
        <activity
            android:name=".CameraActivity2"
            android:screenOrientation="portrait">
        </activity>
       
        <activity android:name="com.encore.VideoPlayback" >
        </activity>
        <activity android:name="com.encore.StartSession" >
        </activity>
          <activity android:name="com.encore.StartSession2" >
        </activity>
        <activity android:name="com.encore.views.NewsfeedActivity" >
        </activity>
        <activity android:name="com.encore.views.HomeActivity" 
            android:windowSoftInputMode="adjustPan">
        </activity>

        <service android:name="UploadService2"></service>


        <service android:enabled="true" android:name=".API.APIService" />
    </application>

</manifest>
