<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.encore"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.front" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".EncoreApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.encore.MainActivity" >
        </activity>
        <activity android:name="com.encore.views.IntroScreen" 
            android:theme="@android:style/Theme.NoTitleBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.encore.views.LoginActivity" >
        </activity>
        <activity android:name="com.encore.views.SignUpActivity" >
        </activity>
        <activity
            android:name="com.encore.MyActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.encore.views.VideoListViewActivity" >
        </activity>
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".PickerActivity"
            android:label="@string/app_name" />
        <activity android:name="com.encore.AndroidVideoCapture" >
        </activity>
        <activity android:name="com.encore.VideoPlayback" >
        </activity>
        <activity android:name="com.encore.AudioSynthesisDemoActivity" >
        </activity>

        <service android:name="UploadService2" >
        </service>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />
    </application>

</manifest>