<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.NoActionBar">
        <item name="android:windowNoTitle">false</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/RapbackActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/RapbackTabs</item>
        <item name="actionBarTabTextStyle">@style/RapbackTabs</item>
        <item name="android:buttonStyle">@style/RapbackButtons</item>
        <item name="android:dialogTheme">@style/CustomDialogTheme</item>
        <!--<item name="de.ankri:switchStyle">@style/switch_light</item>-->
    </style>

    
    <!--  ========= Action Bar =========  -->
    
    <style name="RapbackActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:background">@color/flat_red</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="background">@color/flat_red</item>
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/off_white</item>
    </style>

    <!-- ========= Tabs ========= -->

    <style name="RapbackTabs" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/dark_grey</item>
    </style>
    
    
    <!-- ========= Buttons ========= -->
    
    <style name="RapbackButtons" parent="@android:Widget.Holo.Button">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="LikeButtonStyle" parent="@android:Widget.Holo.Button">
        <item name="android:background">@drawable/like_button_style</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <!-- ========= Dialogs ========= -->
    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="@android:background">@color/off_white</item>
        <item name="@android:buttonStyle">@style/RapbackButtons</item>
    </style>

