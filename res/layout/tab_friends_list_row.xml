<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_details_profile_picture"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/default_profile_picture" />

    <TextView
        android:id="@+id/tab_friends_username"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/profile_details_profile_picture"
        android:text="Username"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textAppearance="?android:textAppearanceMedium"/>

    <TextView
        android:id="@+id/tab_friends_fullname"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/tab_friends_username"
        android:layout_toRightOf="@id/profile_details_profile_picture"
        android:textAppearance="?android:textAppearanceSmall"
        android:text="Full Name"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#777" />

</RelativeLayout>