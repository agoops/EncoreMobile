<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alt_intro_background"
    android:orientation="vertical" >
    
    <!-- Logo  -->
    <TextView 
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rapchat"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="50sp" />
    
    <TextView 
        android:id="@+id/get_the_crowd_going"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get the crowd going."
        android:textColor="#000"
        android:layout_centerInParent="true"
        android:textSize="25sp" />

    <!-- Contains the Login/Signup Buttons  -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
        
	    <Button
	        android:id="@+id/login_intro"
	        style="?android:attr/borderlessButtonStyle"
	        android:layout_width="wrap_content"
	        android:layout_height="52dp"
	        android:layout_weight="0.97"
	        android:background="@drawable/orange_gradient"
	        android:text="LOGIN"
	        android:textColor="@android:color/white" />
		    
	    <Button
	        android:id="@+id/signup_intro"
	        style="?android:attr/borderlessButtonStyle"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:background="@drawable/orange_gradient"
	        android:layout_weight="1"
	        android:text="SIGN UP"
	        android:textColor="@android:color/white" />
    </LinearLayout>
    
</RelativeLayout>


