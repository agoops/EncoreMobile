<?xml version="1.0" encoding="utf-8"?>
    <com.encore.SessionView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dip" >

    <FrameLayout
        android:id="@+id/thumbnail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.encore.widget.AspectRatioImageView
            android:id="@+id/inboxImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/jay" />

        <!-- <ImageView
            android:id="@+id/play_symbol_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/play_64x64" /> -->
    </FrameLayout>

    <TextView
        android:id="@+id/session_title_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Session Title"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/crowd_members_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Member 1, Member 2, Member 3"
        android:padding="10dp"/>


    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comments_wrapper"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/likes_container"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                style="@style/LikeButtonStyle"
                android:id="@+id/like_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/likes_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0 likes"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/comments_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/comment_black" />

            <TextView
                android:id="@+id/comments_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0 comments"
                android:paddingLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

