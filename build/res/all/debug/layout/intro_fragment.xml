<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flat_red"
    android:orientation="vertical" >

    <!-- Logo  -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rapback"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_above="@+id/middleView"
        android:textSize="40sp" />

    <View
        android:id="@+id/middleView"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_centerVertical="true"/>

    <!-- Contains the Login/Signup Buttons  -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/middleView"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <Button
            android:id="@+id/signup_intro"
            style="@style/BlueButtonStyle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Sign Up"
            android:layout_marginLeft="65dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="~ or ~"
            android:layout_toRightOf="@+id/signup_intro"
            android:layout_toLeftOf="@+id/login_intro"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="italic"/>
        <Button
            android:id="@+id/login_intro"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="65dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>
