<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    
    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Send" />
    
    <TextView 
        android:id="@+id/existing_crowds_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/send_button"
		android:layout_alignBaseline="@id/send_button"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:text="Pick a crowd" />
    
    <EditText 
        android:id="@+id/session_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/existing_crowds_text"
        android:layout_centerHorizontal="true"
        android:hint="Session Title" />
    
    <Button 
        android:id="@+id/create_new_crowd_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="(+) Create New Crowd"
        android:textSize="10dp"
        android:layout_centerHorizontal="true" />
    
    <ListView
        android:id="@+id/crowds_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/session_title"
        android:layout_above="@id/create_new_crowd_button" />
</RelativeLayout>
