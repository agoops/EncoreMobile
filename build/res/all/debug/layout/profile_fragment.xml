<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/progress_profile"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        style="?android:attr/progressBarStyleLarge" />

    <RelativeLayout
        android:id="@+id/profileTopContainer"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/progress_profile"
        android:background="#e6e6e6"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:src="@drawable/bobby_prof"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/profile_username"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:layout_toRightOf="@id/profilePicture"
            android:layout_alignTop="@id/profilePicture"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:text="Babs"/>

        <TextView
            android:id="@+id/profile_fullname"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="#777"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_below="@id/profile_username"
            android:layout_toRightOf="@id/profilePicture"
            android:layout_marginRight="20dp"
            android:text="Babak Pourkazemi"/>

        <Button
            android:id="@+id/profile_find_friends_button"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/profilePicture"
            android:layout_below="@id/profile_fullname"
            android:layout_alignBottom="@id/profilePicture"
            android:layout_marginTop="7dp"
            android:layout_marginRight="20dp"
            android:text="Find Friends"/>

        <Button
            android:id="@+id/profileEditButton"
            android:layout_height="35dp"
            android:layout_width="wrap_content"
            android:layout_alignRight="@id/profilePicture"
            android:layout_alignBottom="@id/profilePicture"
            android:layout_alignLeft="@id/profilePicture"
            android:background="@drawable/background_333_transparent"
            android:text="Edit"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/profilePicture"
            android:layout_alignLeft="@id/profilePicture"
            android:layout_alignRight="@id/profile_find_friends_button"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profileNumRapsTv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="0 \nRaps"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/profileNumLikesTv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="0 \nLikes"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/profileNumFriendsTv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="0 \nFriends"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/profileTopContainer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/profileTabsHolder"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal" >
            <Button
                style="@style/ProfileButtonsStyle"
                android:id="@+id/profile_raps_button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Friends" />
            <Button
                style="@style/ProfileButtonsStyle"
                android:id="@+id/profile_crowds_button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Crowds" />
            <Button
                style="@style/ProfileButtonsStyle"
                android:id="@+id/profile_likes_button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Likes" />
            <Button
                style="@style/ProfileButtonsStyle"
                android:id="@+id/profile_requests_button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Requests" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_profile_tabs"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_below="@id/profileTabsHolder"
            android:layout_centerHorizontal="true"/>

        <ListView
            android:id="@+id/tabsLv"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@id/progress_profile_tabs" />

        <FrameLayout
            android:id="@+id/profileNestedFragmentsHolder"
            android:layout_below="@id/profileTabsHolder"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
    </RelativeLayout>

</RelativeLayout>
